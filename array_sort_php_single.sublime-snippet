<?php
function sortByKey(\$a, \$b) {
	\$a = \$a['${2:key}'];
	\$b = \$b['${2:key}'];

	if (\$a == \$b)
		return 0;

	return (\$a < \$b) ? -1 : 1;
}
usort(\$${1:myArray}, 'sortByKey');
?>
]]></content>
